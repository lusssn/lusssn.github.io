---
layout: page
---
<!-- Main Content -->

<% page.posts.each(function(post){ %>
<li>
    <div class="post-preview">

        <h2 class="post-title">
            <%- post.title || "Untitled" %>
        </h2>
        <div class="post-subtitle">
            <%- post.subtitle || "" %>
        </div>
        <div class="post-content-preview">
            <%- truncate(strip_html(post.content), {length: 400, omission: '...'}) %>...
        </div>
        <a href="<%- config.root %><%- post.path %>">READ MORE</a>

    </div>
</li>
<% }); %>


<!-- Pager -->

<ul class="pager">
    <% if (page.prev){ %>
        <li class="previous">
            <a href="<%- config.root %><%- page.prev_link %>">&larr; Newer Posts</a>
        </li>
    <% } %>
    <% if (page.next){ %>
        <li class="next">
            <a href="<%- config.root %><%- page.next_link %>">Older Posts &rarr;</a>
        </li>
    <% } %>
</ul>

